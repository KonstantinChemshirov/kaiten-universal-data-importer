{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": ["string", "number"],
        "maxLength": 1024
      },
      "type": {
        "type": "string",
        "enum": ["string", "number", "date", "select", "multi_select"]
      },
      "name": {
        "type": "string",
        "maxLength": 128
      },
      "options": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": ["string", "number"],
              "maxLength": 1024
            },
            "value": {
              "type": ["string", "number"],
              "maxLength": 128
            },
            "color": {
              "type": "integer",
              "minimum": 1,
              "maximum": 16
            },
            "sort_order": {
              "type": "number"
            }
          },
          "required": ["id", "value"],
          "additionalProperties": false
        }
      }
    },
    "required": ["id", "type", "name"],
    "additionalProperties": true
  }
}
